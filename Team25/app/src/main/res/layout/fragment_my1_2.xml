<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.kumoh.ce.mobile.team25.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="날짜선택"
            android:textSize="30dp"/>
        <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/calendar">
        </CalendarView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간선택"
            android:layout_marginLeft="10dp"
            android:textSize="30dp"/>


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollIndicators="right">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0~1"
                    />
                <Button
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1~2"
                    />
                <Button
                    android:id="@+id/b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2~3"/>
                <Button
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3~4"/>
                <Button
                    android:id="@+id/b5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4~5"/>
                <Button
                    android:id="@+id/b6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5~6"
                    />
                <Button
                    android:id="@+id/b7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6~7"
                    />
                <Button
                    android:id="@+id/b8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7~8"/>
                <Button
                    android:id="@+id/b9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8~9"/>
                <Button
                    android:id="@+id/b10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9~10"/>
                <Button
                    android:id="@+id/b11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10~11"
                    />
                <Button
                    android:id="@+id/b12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11~12"
                    />
                <Button
                    android:id="@+id/b13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12~13"/>
                <Button
                    android:id="@+id/b14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13~14"/>
                <Button
                    android:id="@+id/b15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14~15"/>
                <Button
                    android:id="@+id/b16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15~16"/>
                <Button
                    android:id="@+id/b17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16~17"/>
                <Button
                    android:id="@+id/b18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17~18"/>
                <Button
                    android:id="@+id/b19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18~19"/>
                <Button
                    android:id="@+id/b20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19~20"/>
                <Button
                    android:id="@+id/b21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20~21"/>
                <Button
                    android:id="@+id/b22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21~22"/>
                <Button
                    android:id="@+id/b23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22~23"/>
                <Button
                    android:id="@+id/b24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23~24"/>

            </LinearLayout>

        </HorizontalScrollView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="예약인원"
            android:textSize="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="-"
                android:textSize="60dp"

                android:onClick="minus"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/tx"
                android:text="0"
                android:textSize="70dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="60dp"
                android:onClick="plus"
                android:text="+"/>

        </LinearLayout>
        <Button
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/reservation"
            android:text="예약하기"/>

    </LinearLayout>

</ScrollView>

