<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="kr.ac.kumoh.ce.mobile.team25.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/open"
            android:layout_width="170dp"
            android:layout_height="190dp"
            android:background="#00000000"
            android:drawableTop="@drawable/aopen"
            android:text="OPEN"
            android:textStyle="bold"
            android:textSize="20dp" />

        <View
            android:layout_width="2dip"
            android:layout_height="fill_parent"
            android:background="#8e8a89"/>

        <Button
            android:id="@+id/lock"
            android:layout_width="170dp"
            android:layout_height="190dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:background="#00000000"
            android:drawableTop="@drawable/alock"
            android:text="LOCK"
            android:textSize="20dp" />


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#8e8a89"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/camera"
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:drawableTop="@drawable/camera"
            android:text="CAMERA"
            android:textStyle="bold"
            android:textSize="20dp" />
        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#8e8a89"/>

        <Button
            android:id="@+id/bannap"
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:textStyle="bold"
            android:drawableTop="@drawable/bannap"
            android:text="Return"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/back"
            android:textSize="25dp"
            android:textColor="#000"
            android:gravity="center"

            android:text="Key Information"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/keyinfo"
            android:text="SpaceIn/Aë£¸/11:00am~13:00pm "/>

    </LinearLayout>

</LinearLayout>

